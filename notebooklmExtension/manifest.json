{
  "name": "NotebookLM Citation Legend",
  "description": "Adds a live citation legend and exports mapped citations when copying text from NotebookLM",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "clipboardRead",
    "clipboardWrite", 
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://notebooklm.google.com/*"
  ],
  "content_scripts": [{
    "matches": ["https://notebooklm.google.com/*"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_idle"
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "NotebookLM Citation Legend"
  },
  "background": {
    "service_worker": "worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  }
}
