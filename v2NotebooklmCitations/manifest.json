{
  "manifest_version": 3,
  "name": "NotebookLM Citation Source Mapper",
  "version": "1.0.0",
  "description": "Ordnet Zitatnummern in NotebookLM den vollst√§ndigen Dateinamen der Quelldokumente zu und zeigt eine Mapping-Legende an.",
  "permissions": [
    "clipboardWrite",
    "scripting"
  ],
  "host_permissions": [
    "https://notebooklm.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://notebooklm.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
